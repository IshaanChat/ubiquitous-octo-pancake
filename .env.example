# ServiceNow instance configuration
SERVICENOW_INSTANCE=your-instance.service-now.com
SERVICENOW_USERNAME=your-username
SERVICENOW_PASSWORD=your-password

# Authentication mode: basic | oauth | api_key
AUTH_TYPE=basic

# OAuth (password grant)
OAUTH_CLIENT_ID=
OAUTH_CLIENT_SECRET=
# Optional override; defaults to https://<instance>/oauth_token.do
OAUTH_TOKEN_URL=

# API key (if AUTH_TYPE=api_key)
API_KEY=
# Optional header name for API key
API_KEY_HEADER=X-ServiceNow-API-Key

# Optional: JSON-RPC bearer auth (protects /rpc tools)
# When set, /rpc requires Authorization: Bearer <RPC_AUTH_TOKEN>
RPC_AUTH_TOKEN=
RPC_ALLOW_PARAMS_AUTH=true

# Optional: CORS allowed origins (comma-separated, default '*')
CORS_ALLOW_ORIGINS=

# Optional: protect /events SSE stream
# Set to 'true' to require bearer auth; token from EVENTS_AUTH_TOKEN or RPC_AUTH_TOKEN
EVENTS_AUTH_REQUIRED=false
EVENTS_AUTH_TOKEN=
